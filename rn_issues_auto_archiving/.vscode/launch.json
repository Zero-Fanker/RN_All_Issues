    "version": "0.2.0",
    "configurations": [
        {
            "name": "github issue_processor",
            "type": "debugpy",
            "request": "launch",
            "program": "src/issue_processor_main.py",
            "args": [
                "--config",
                "./config/issue_processor.json",
                "--platform-type",
                "github"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "gitlab issue_processor",
            "type": "debugpy",
            "request": "launch",
            "program": "src/issue_processor_main.py",
            "args": [
                "--config",
                "./config/issue_processor.json",
                "--platform-type",
                "gitlab"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "auto_archiving",
            "type": "debugpy",
            "request": "launch",
            "program": "src/auto_archiving_main.py",
            "args": [
                "--config",
                "./config/auto_archiving.json",
                "--failed-record",
                "./归档失败记录.json"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "push_document gitlab",
            "type": "debugpy",
            "request": "launch",
            "program": "src/push_document.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "check_config",
            "type": "debugpy",
            "request": "launch",
            "program": "src/utils/check_config.py",
            "args": [
                "--config-dir",
                "./config"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Python 调试程序: 当前文件",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        }
    ]
}
